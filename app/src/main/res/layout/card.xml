<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:background="#FF23202B"
    android:elevation="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    android:padding="8dp"
    app:cardBackgroundColor="#262626"
    android:paddingBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        >

        <ImageView
            android:id="@+id/exoplanet_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"

            />

        <TextView
            android:id="@+id/exoplanet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:paddingTop="8dp"
            android:textStyle="bold"
            android:text="Exoplanet Name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/discovery_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#AAAAAA"
            android:paddingTop="4dp"
            android:text="Discovery Date"
            android:layout_marginLeft="15dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/read_more_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read More"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end"
            android:background="@drawable/read_more_button"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>
