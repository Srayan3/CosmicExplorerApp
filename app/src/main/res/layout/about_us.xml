<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigationBar"
        android:padding="16dp">

        <!-- Content inside ScrollView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Team Name -->
            <TextView
                android:id="@+id/teamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We are The Cosmic Seekers"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal" />

            <!-- Member Card 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/memberCard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/memberImage1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/srayan"
                        />

                    <TextView
                        android:id="@+id/memberName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shan Abrar Srayan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/memberRole1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lead Dev"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Member Card 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/memberCard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/memberImage2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/istiaq"
                        />

                    <TextView
                        android:id="@+id/memberName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Istiaq Prodhan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/memberRole2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Front End Dev"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Repeat for other members -->

            <!-- Member Card 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/memberCard3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/memberImage3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/abid"
                        />

                    <TextView
                        android:id="@+id/memberName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Abid Hasan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/memberRole3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Back End Dev"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Member Card 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/memberCard4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/memberImage4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/prohor"
                        />

                    <TextView
                        android:id="@+id/memberName4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zunayed Inbe Hossain Prohor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/memberRole4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Graphics Designer"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Member Card 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/memberCard5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/memberImage5"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/tanaz"
                        />

                    <TextView
                        android:id="@+id/memberName5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sanzila Tanaz"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/memberRole5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Content Writer"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF262626"
        app:menu="@menu/bottom_nav"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
